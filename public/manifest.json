{
	"manifest_version": 3,
	"name": "NovaSecure",
	"version": "0.0.2",
	"description": "Vault de Contrase√±as",
	"permissions": ["activeTab", "scripting", "storage"],
	"host_permissions": ["https://novasecure.vercel.app/*"],
	"action": {
		"default_popup": "index.html"
	},
	"background": {
		"service_worker": "background.js"
	},
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content.js"]
		}
	],
	"icons": {
		"16": "./icon16.png",
		"32": "./icon32.png",
		"48": "./icon48.png",
		"64": "./icon64.png",
		"96": "./icon96.png",
		"128": "./icon128.png"
	},
	"author": {
		"name": "MaxCoding",
		"url": "https://maxcoding.pro"
	}
}
